generator client {
  provider = "prisma-client-js"
  previewFeatures = ["filterJson"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PageType {
  PUBLIC
  ADMIN
}

enum LeadInterestType {
  STUDENT
  CLIENT
  PARTNER
}

enum LeadDivision {
  RWS
  TWS
  PRODUCTS
}

enum LeadStatus {
  NEW
  REVIEWED
  CONTACTED
  CONVERTED
  REJECTED
}

enum TestimonialStatus {
  ACTIVE
  INACTIVE
}

enum JobType {
  INTERNSHIP
  FULLTIME
  CONTRACT
  PARTTIME
}

enum ContentType {
  PROGRAM
  SERVICE
  PRODUCT
}

model SeoSettings {
  id                     String   @id @default(cuid())
  siteName               String
  titleTemplate          String
  defaultMetaDescription String
  defaultOgImageUrl      String?
  defaultFaviconUrl      String?
  updatedAt              DateTime @updatedAt
}

model Page {
  id          String   @id @default(cuid())
  slug        String   @unique
  routePath   String   @unique
  pageType    PageType
  isIndexable Boolean  @default(true)
  updatedAt   DateTime @updatedAt

  seo      PageSeo?
  sections PageSection[]
}

model PageSeo {
  id              String  @id @default(cuid())
  pageId          String  @unique
  metaTitle       String?
  metaDescription String?
  canonicalUrl    String?
  ogTitle         String?
  ogDescription   String?
  ogImageUrl      String?
  robots          String?

  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)
}

model PageSection {
  id          String   @id @default(cuid())
  pageId      String
  sectionKey  String
  contentJson Json
  sortOrder   Int      @default(0)
  updatedAt   DateTime @updatedAt

  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@index([pageId, sortOrder])
}

model Lead {
  id           String   @id @default(uuid())
  name         String
  email        String
  phone        String
  interestType String   @default("STUDENT")
  division     String   @default("TWS")
  message      String?
  source       String   @default("Website")
  status       String   @default("NEW")
  metadata     Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt
}

model Admin {
  id           String    @id @default(uuid())
  email        String    @unique
  password     String
  name         String?
  role         String    @default("ADMIN")
  lastLoginAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model BlogPost {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  summary     String
  content     String   @db.Text
  coverImage  String?
  author      String?  @default("Admin")
  category    String?  @default("Tech")
  
  // ðŸ‘‡ Tags & Featured
  tags        String[] @default([])       
  isFeatured  Boolean  @default(false)    
  
  // ðŸ‘‡ SEO FIELDS (Ye Missing The - Inhe Wapas Layein)
  metaTitle   String?
  metaDesc    String?

  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug, published])
}
model JobOpening {
  id               String   @id @default(uuid())
  title            String
  type             JobType
  location         String
  description      String   @db.Text
  requirements     String[]
  responsibilities String[]
  status           String   @default("DRAFT") // DRAFT, PUBLISHED, CLOSED
  applyLink        String?
  postedAt         DateTime @default(now())
  expiresAt        DateTime?
  salaryRange      String?
  experience       String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // ðŸ‘‡ NEW: Ye do nayi lines add ki gayi hain
  acceptingApplications Boolean          @default(true)
  applications          JobApplication[]

  @@index([status, type])
}

model PageContent {
  id          String   @id @default(uuid())
  pageName    String   // e.g., 'home', 'about', 'contact'
  sectionKey  String   // e.g., 'hero', 'about', 'services'
  title       String?
  subtitle    String?
  description String?  @db.Text
  content     Json?    // For rich content or additional fields
  // New fields for About page Mission & Vision sections
  visionTitle String?
  visionDesc  String?  @db.Text
  missionTitle String?
  missionDesc  String?  @db.Text
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([pageName, sectionKey])
  @@index([pageName, isActive])
}

model DivisionContent {
  id          String     @id @default(uuid())
  type        ContentType  // PROGRAM, SERVICE, or PRODUCT
  name        String
  slug        String     @unique
  description String     @db.Text
  features    String[]
  status      String     @default("Research") // Research, MVP, Live
  coverImage  String?
  icon        String?
  order       Int        @default(0)
  metadata    Json?      // For additional fields specific to the type
  seoTitle    String?
  seoDesc     String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([type, status])
}

model GlobalConfig {
  id          String   @id @default(uuid())
  key         String   @unique
  value       Json
  description String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model SystemSetting {
  id             String   @id @default(cuid())
  maintenanceMode Boolean @default(false)
  thankYouPage   Json?    // { title: String, message: String }
  notFoundPage   Json?    // { title: String, message: String }
  updatedAt      DateTime @updatedAt
}

// ðŸ‘‡ NEW MODEL: Job Applications store karne ke liye
model JobApplication {
  id          String     @id @default(uuid())
  name        String
  email       String
  phone       String
  resumeLink  String     // Google Drive / LinkedIn Link
  coverLetter String?    // Optional
  
  // Relation to JobOpening
  jobId       String
  job         JobOpening @relation(fields: [jobId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime   @default(now())
}

// Testimonial System Models
model Testimonial {
  id        String            @id @default(cuid())
  name      String
  role      String
  company   String?
  content   String            @db.Text
  image     String?
  rating    Int
  status    TestimonialStatus @default(ACTIVE)
  order     Int               @default(0)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  @@index([status, order])
}

model TestimonialPageContent {
  id        String   @id @default(cuid())
  pageName  String   @unique
  title     String?
  subtitle  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Indexes are defined inline with their respective models